.cart-tpl-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 300rpx;
  background: white;
  margin-top: 20px;
}

.cart-tpl-point {
  width: 25px;
  height: 25px;
  background: #f2f2f2;
  border-radius: 50%;
  margin-left: 10px;
  margin-right: 10px;
}

.cart-tpl-img {
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
}

.cart-tpl-img image {
  width: 250rpx;
  height: 250rpx;
}

.cart-tpl-content {
  width: 56%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cart-tpl-title {
  width: 94%;
  height: 79rpx;
  font-size: 28rpx;
  overflow: hidden;
  margin-top: 22px;
  margin-bottom: 12px;
}

.cart-tpl-bottom {
  width: 94%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cart-tpl-price {
  flex: 1;
  text-align: left;
  color: red;
  font-size: 34rpx;
  overflow: hidden;
  height: 100%;
  line-height: 100rpx;
  width: 100%;
}

.cart-tpl-num {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: right;
  border: 1px solid #999;
  border-radius: 5px;
  margin-right: 18px;
  height: 40rpx;
  font-size: 25rpx;
  line-height: 40rpx;
}

.left {
  flex: 1;
  text-align: center;
  border-right: 1px solid #999;
  height: 100%;
}

.all-num {
  flex: 2;
  text-align: center;
  border-right: 1px solid #999;
  height: 100%;
}

.right {
  flex: 1;
  text-align: center;
  height: 100%;
}

.cart-tpl-content icon {
 position:relative;
right:-85px;
top:5px;
}
