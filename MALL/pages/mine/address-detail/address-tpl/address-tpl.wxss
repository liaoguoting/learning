.address-tpl-container {
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  align-items: center;
  margin-left: 10px;
  margin-top: 0px;
  border-bottom: 1px solid gray;
}

.address-tpl-content {
  display: flex;
  flex-direction: column;
}

.content-top {
  display: flex;
}

.address-tpl-default {
  width: 130rpx;
  height: 48rpx;
  color: gray;
  font-size: 28rpx;
  text-align: center;
  line-height: 48rpx;
  position: absolute;
  right: 61px;
  border: 1px solid gray;
  overflow: hidden;
  border-radius: 5px;
}

.address-tpl-edit {
  width: 100rpx;
  height: 48rpx;
  color: gray;
  font-size: 28rpx;
  text-align: center;
  line-height: 48rpx;
  position: absolute;
  right: 0px;
  border-left: 1px solid gray;
  overflow: hidden;
}

.top-phone {
  font-size: 28rpx;
  color: gray;
  width: 200rpx;
}

.top-name {
  width: 71px;
  font-size: 32rpx;
  height: 50rpx;
  overflow: hidden;
}

.content-bottom {
  font-size: 28rpx;
  width: 600rpx;
  height: 75rpx;
  word-break: break-all;
  overflow: hidden;
}
