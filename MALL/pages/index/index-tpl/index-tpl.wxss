.index-tpl-container {
  height: 500rpx;
  display: inline-block;
  position: relitive;

}

.index-tpl-img image {
  width: 100%;
  height: 300rpx;
}

.index-tpl-txt {
  width: 100%;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index-tpl-txt1 {
  height: 43px;
  width: 91%;
  font-size: 30rpx;
  text-align: left;
  letter-spacing: 1px;
  overflow: hidden;
}

.index-tpl-txt-title {
  color: #3e3e3e;
}

.index-tpl-txt2 {
  width: 91%;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  height: 44rpx;
}

.index-tpl-txt-price-l {
  height: 44rpx;
  flex: 1;
  font-size: 32rpx;
  color: red;
  overflow: hidden;
}

.index-tpl-txt-price-r {
  font-size: 28rpx;
  flex: 1;
  text-align: right;
  color: #999;
  text-decoration: line-through;
  height: 44rpx;
  overflow: hidden;
}

.index-tpl-txt3 {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  width: 91%;
  color: #999;
  height: 42rpx;
  overflow: hidden;
  margin-top:8rpx;
}

.new-product {
  height: 42rpx;
  flex: 1;
  overflow: hidden;
  font-size:27rpx;

}

.sale-num {
  height: 42rpx;
  flex: 1;
  text-align: right;
  font-size:27rpx;

}
