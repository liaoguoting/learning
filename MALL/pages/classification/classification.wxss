/* pages/classification/classification.wxss */
@import 'classification-tpl/classification-tpl.wxss';

.container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  padding-top: 0;
}

.classif-left-out {
  position: fixed;
  top: 0;
  bottom: 0;
}

.classif-left {
  width: 200rpx;
  height: 600px;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}

.classif-right {
  width: 80%;
  height: 100%;
  float: left;
  position: relative;
  margin-left: 185rpx;
  margin-top: 0;
  overflow: hidden;
}

.left-detail {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #3e3e3e;
}
